{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2022",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@predicto-energy-front/action-plan": ["libs/action-plan/src/index.ts"],
      "@predicto-energy-front/core": ["libs/core/src/index.ts"],
      "@predicto-energy-front/shared/directives": [
        "libs/shared/directives/src/index.ts"
      ],
      "@predicto-energy-front/shared/guards": [
        "libs/shared/guards/src/index.ts"
      ],
      "@predicto-energy-front/shared/pipes": ["libs/shared/pipes/src/index.ts"],
      "@predicto-energy-front/shared/snackbar": [
        "libs/shared/snackbar/src/index.ts"
      ],
      "@predicto-energy-front/shared/ui": ["libs/shared/ui/src/index.ts"],
      "@predicto-energy-front/shared/utils": ["libs/shared/utils/src/index.ts"]
    },
    "resolveJsonModule": true
  },
  "exclude": ["node_modules", "tmp"]
}
